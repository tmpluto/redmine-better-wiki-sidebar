{
	"manifest_version": 3,
	"name": "Redmine Better Wiki Sidebar",
	"version": "1.0.0",
	"description": "Notion-like note-taking experience in Redmine Wikis with easy navigation",
	"homepage_url": "https://github.com/tmpluto/redmine-better-wiki-sidebar",
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"host_permissions": ["https://*/*"],
	"permissions": ["scripting", "webNavigation", "storage"],
	"background": {
		"service_worker": "assets/background.js",
		"type": "module"
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	  },
	"web_accessible_resources": [
		{
			"resources": ["assets/*"],
			"matches": ["https://*/*"]
		}
	],
	"content_scripts": [
		{
			"matches": [
				"https://*/projects/*/wiki/index",
				"https://*/projects/*/wiki/*/edit",
				"https://*/projects/*/wiki",
				"https://*/projects/*/wiki/*"
			],
			"js": ["assets/content.js"],
			"run_at": "document_idle"
		}
	]
}
